{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "outDir": "../dist-server",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "shared/*": ["../shared/*"]
    },
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": [
    "../server/**/*",
    "../shared/**/*"
  ],
}
