{
  "references": [
    {
      "path": "./src"
    }, 
    {
      "path": "./server"
    }
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "noUncheckedIndexedAccess": true,
    "useDefineForClassFields": true,
  },
  "include": [
    "shared",
  ],
  "exclude": [
    "node_modules",
    "dist-client",
    "dist-server"
  ],
}
