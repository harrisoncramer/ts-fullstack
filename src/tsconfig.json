{
  "extends": "../tsconfig.json",
  "types": ["vite/client"],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "outDir": "../dist-client",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "shared/*": ["../shared/*"]
    }
  },
  "include": [
    "../src/**/*",
    "../shared/**/*",
    "../vite.config.ts"
  ]
}
